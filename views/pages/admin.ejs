<section id="reservaciones" class="sections">
    <h1>Reservaciones</h1>
    <h2>Validar Reservacion</h2>
    <div>
        <h4>Ingrese los datos de la reservacion</h4>
        <form name="buscar_reservacion" action="/admin-buscar_reservacion" method="post">
            <div>
                <label for="">ID de la Reservacion</label>
                <input type="number" name="id_reservacion" id="id_reservacion" value="0">
                <label for="">Nombre del Cliente</label>
                <input type="text" name="nombre_cliente" id="nombre_cliente" placeholder="Nombre(s) y Apellidos">
                <button class="btn btn-primary" type="submit">Buscar</button>
            </div>
        </form>
        <div class="reservacion-tabla">
            <table id="reservacion_cliente" name="reservacion_cliente" align="center" >
                <thead>
                    <tr>
                        <th>ID Reservacion</th>
                        <th>Cliente</th>
                        <th>Mascota</th>
                        <th>Tipo de Servicio</th>
                        <th>Mesa</th>
                        <th>Personas</th>
                        <th>Fecha de Reservacion</th>
                        <th>Hora Inicio</th>
                        <th>Hora Final</th>
                    </tr>
                </thead>
                <tbody id="reservacion_cliente" name="reservacion_cliente">
                    <tr>
                        <%for (let i=0;i<resersize;i++){%>
                            <tr>
                                <%for (let j=0;j<9;j++){%>
                                    <td><%=reservacion_cliente[i][j]%></td>
                                <%}%>  
                            </tr>
                                
                        <%}%>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <div>
            <form action="/admin-validar_reservacion" method="post">
                <label for="">ID de la Reservacion</label>
                <input type="number" name="id_reservacion" id="id_reservacion" value="0">
                <label for="">Ingrese el numero del empleado</label>
                <input type="number" name="num_empleado" id="num_empleado" placeholder="ID del empleado">
                <div class="asistencia-reservacion">
                    <label for="">Asistencia</label>
                    <div class="radio-part">
                        <div class="radio-op">
                            <label for="">Si</label>
                            <input type="radio" name="asistencia" value="1" id="radio1" onclick="">
                        </div>
                        <div class="radio-op" id="left-op">
                            <label for="">No</label>
                            <input type="radio" name="asistencia" value="0" id="radio2" onclick="">
                        </div>
                        
                    </div>
                </div>
                <label for="">Nombre del Cliente</label>
                <input type="text" name="nombre_cliente" id="nombre_cliente" placeholder="Nombre(s) y Apellidos">
                <button type="submit" id="btn-validar" class="btn btn-primary">Validar</button>
            </form>            
        </div>
        
    </div>
</section>
<section id="mascotas-section" class="sections">
    <h1>Mascotas</h1>
    <h3>Tabla Mascotas</h3>
    <table align="center" >
        <!-- <caption>Ejemplo de tabla</caption> -->
        <thead>
            <tr>
                <th>ID Mascota</th>
                <th>ID Especie</th>
                <th>Nombre</th>
                <th>Fecha de Cumpleanos</th>
            </tr>
        </thead>
        <tbody id="mascotas" name="mascotas">
            <tr>
                <%for (let i=0;i<msize;i++){%>
                    <tr>
                        <%for (let j=0;j<4;j++){%>
                            <td><%=mascotas[i][j]%></td>
                        <%}%>  
                    </tr>
                      
                <%}%>
            </tr>
        </tbody>
    </table>
    <h3>Tabla Especies</h3>
    <table align="center" >
        <thead>
            <tr>
                <th>ID Especie-Raza</th>
                <th>Especie</th>
                <th>Raza</th>
                <th>Alimentacion</th>
                <th>Esperanza de Vida</th>
            </tr>
        </thead>
        <tbody id="razas" name="razas">
            <tr>
                <%for (let i=0;i<rsize;i++){%>
                    <tr>
                        <%for (let j=0;j<5;j++){%>
                            <td><%=razas[i][j]%></td>
                        <%}%>  
                    </tr>
                      
                <%}%>
            </tr>
        </tbody>
    </table>
    <h2>Agregar Especie</h2>
    <form action="/admin-Agregar_Especie" method="post">
        <div>
            <h4>Ingrese los datos de la nueva raza</h4>
            <div class="double-container">
                <div class="input-container">
                    <label for="">Especie</label>
                    <input type="text" name="especie" id="especie" placeholder="Perro, gato, ...">
                </div>
                <div class="input-container">
                    <label for="">Raza</label>
                    <input type="text" name="especie_raza" id="especie_raza" placeholder="Pastor, ...">
                </div>
            </div>
            <div class="double-container">
                <div class="input-container">
                    <label for="">Alimentacion</label>
                    <input type="text" name="especie_alimentacion" id="especie_alimentacion" placeholder="Omnivoro, ...">
                </div>
                <div class="input-container">
                    <label for="">Esperanza de vida</label>
                    <input type="number" name="especie_esperanza" id="especie_esperanza" placeholder="En aÃ±os">
                </div>
            </div>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">Agregar Especie</button>
    </form>
    <h2>Agregar Mascota</h2>
    <form action="/admin-Agregar_Mascota" method="post">
        <div>
            <h4>Ingrese los datos de la mascota</h4>
            <label for="">Nombre</label>
            <input type="text" name="mascota_name" id="mascota_name" placeholder="Maximo 10 caracteres">
            <label for="">Fecha de cumpleaÃ±os</label>
            <input type="date" name="mascota_birthday" id="mascota_birthday">
            <label for="">Especie-Raza</label>
            <input type="number" name="especie_id" id="especie_id" placeholder="Revisar la tabla de arriba">
        </div>
        <button class="btn btn-primary" type="submit">Agregar</button>
    </form>
    <h2>Eliminar Mascota</h2>
    <form action="/admin-Eliminar_Mascota" method="post">
        <div>
            <h4>Ingrese el ID de la mascota</h4>
            <label for="">ID Mascota: </label>
            <input type="number" name="mascota_id" id="mascota_id">
            <button class="btn btn-lg btn-primary" type="submit">Eliminar Mascota</button>
        </div>
        
    </form>
    <h2>Eliminar Especie</h2>
    <form action="/admin-Eliminar_Especie" method="post">
        <div>
            <h4>Ingrese el ID de la Especie-Raza</h4>
